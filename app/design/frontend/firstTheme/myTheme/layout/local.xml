<layout version="0.1.0">
    <default>
 
        <reference name="head">
            <!--Adding JS Files Styles-->
            <action method="addItem"><type>skin_js</type><name>js/lib/sly.min.js</name><params/></action>
            <!--<action method="addItem"><type>skin_js</type><name>js/recently.js</name><params/></action>-->
            <action method="addItem"><type>skin_js</type><name>js/main-script.js</name><params/></action>

            <!--Adding CSS Files Styles-->
            <action method="addCss"><stylesheet>css/styles.css</stylesheet><params/></action>
            <action method="addCss"><stylesheet>css/main-styles.css</stylesheet><params/></action>
        </reference>
        <remove name="footer.newsletter"/>

        <reference name="content">
            <block type="cms/block" name="custom-static-block" after="-">
                <action method="setBlockId"><block_id>static-block</block_id></action>
            </block>
        </reference>
    </default>

    <cms_index_index>
        <reference name="content">
            <block type="core/template" name="custom-block"  before="-" template="custom-block/text.phtml" />
        </reference>
        <!--<remove name="cms_menu"/>-->
    </cms_index_index>

    <catalog_product_view>
    </catalog_product_view>


    <catalog_category_view>
    </catalog_category_view>


    <catalogsearch_result_index translate="label">
        <reference name="root">
            <action method="setTemplate">
                <!--<template>page/1column.phtml</template>-->
                <!--<template>page/2columns-right.phtml</template>-->
                <template>page/3columns.phtml</template>
            </action>
        </reference>

        <reference name="left">
            <!--<remove name="right.reports.product.viewed"/>-->

            <block type="reports/product_viewed" before="right.permanent.callout" name="right.reports.product.viewed" template="reports/product_viewed.phtml" />
            <block type="cms/block" name="cms_menu" after="-">
                <action method="setBlockId"><block_id>cms_menu</block_id></action>
            </block>
        </reference>

        <reference name="right">
            <!--<remove name="right.reports.product.viewed"/>-->
            <action method="unsetChild"><name>right.reports.product.viewed</name></action>
            <block type="cms/block" name="cms_menu" after="-">
                <action method="setBlockId"><block_id>cms_menu</block_id></action>
            </block>

        </reference>
        <!--<remove name="cms_menu"/>-->

    </catalogsearch_result_index>


</layout>